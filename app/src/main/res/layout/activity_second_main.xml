<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.tnbloodbank.SecondMainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Registration Field :"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:text="DONE"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="34dp"
        android:text="Name :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="Sex :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="Blood Group :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="Phone/Whatsapp :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="Email ID :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="Password :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:text="Address :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:text="District :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:text="Previous Donation :"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etname"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <RadioGroup
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/etname"
        android:layout_alignStart="@+id/etname">

        <RadioButton
            android:id="@+id/rdmale"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Male"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdfemale"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Female"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </RadioGroup>
    <Spinner
        android:id="@+id/spbloodgroup"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/radioGroup"
        android:ems="10"
        android:spinnerMode="dropdown"
        android:entries="@array/blood_group_arrays"
        android:prompt="@string/blood_group_prompt" />

    <EditText
        android:id="@+id/etphone"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/spbloodgroup"
        android:layout_below="@+id/spbloodgroup"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/etemailid"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/etphone"
        android:layout_below="@+id/etphone"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/etemailid"
        android:layout_below="@+id/etemailid"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/etaddress"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/etpassword"
        android:layout_below="@+id/etpassword"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/etdistrict"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_above="@+id/textView12"
        android:layout_alignStart="@+id/etaddress"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <RadioGroup
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/rdyesno"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/etdistrict" >

        <RadioButton
            android:id="@+id/rdyes"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Yes"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rdno"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="No"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </RadioGroup>


    android:textColor="@color/colorPrimary"


</RelativeLayout>
