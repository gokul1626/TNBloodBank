<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.tnbloodbank.DisplayActiviy">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginTop="21dp"
        android:text="Name :"
        android:textColor="@android:color/background_dark"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/textView13"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/textView13"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginTop="13dp"
        android:text="Sex :"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:id="@+id/tvsex"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/tvname" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="160dp"
        android:textColor="@android:color/background_dark"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Blood Group :"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvbloodgroup"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:textColor="@color/button"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignEnd="@+id/tvsex" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/textView20"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="18dp"
        android:text="Phone/Whatsapp :"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvphone"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:textColor="@color/button"
        android:layout_alignBaseline="@+id/textView24"
        android:layout_alignBottom="@+id/textView24"
        android:layout_alignStart="@+id/tvbloodgroup"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="19dp"
        android:text="Email ID :"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView24"
        android:layout_alignStart="@+id/textView28" />

    <TextView
        android:id="@+id/tvemailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvphone"
        android:layout_alignTop="@+id/textView26" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_marginTop="22dp"
        android:text="Address :"
        android:textColor="@android:color/background_dark"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView26"
        android:layout_toStartOf="@+id/tvaddress" />

    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView28"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/textView20"
         />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:text="District :"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView28"
        android:layout_alignStart="@+id/textView28" />

    <TextView
        android:id="@+id/tvdistrict"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:textColor="@color/button"
        android:layout_alignStart="@+id/tvaddress"
        android:layout_alignTop="@+id/textView30"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView32"
        android:textColor="@android:color/background_dark"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:text="Previous donation :"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView30"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvpreviousdonation"
        android:layout_width="160dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/textView32"
        android:layout_alignStart="@+id/tvdistrict"
        android:textSize="18sp" />

</RelativeLayout>
