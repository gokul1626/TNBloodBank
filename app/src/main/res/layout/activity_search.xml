<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.tnbloodbank.SearchActivity">


    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:textColor="@android:color/background_dark"
        android:text="Search :"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:text="District :"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView16"
        android:layout_toStartOf="@+id/btsearch"
        android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="80dp"
        android:text="Blood Group :"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etdistrict"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@+id/spbloodgroup"
        android:layout_alignBottom="@+id/spbloodgroup"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />
    <Spinner
        android:id="@+id/spbloodgroup"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="195dp"
        android:ems="10"
        android:spinnerMode="dropdown"
        android:entries="@array/blood_group_arrays"
        android:prompt="@string/blood_group_prompt"
        android:layout_below="@+id/textView18"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etdistrict"
        android:layout_marginStart="46dp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/textView16"
        android:text="Search"
        android:textStyle="bold" />
</RelativeLayout>
